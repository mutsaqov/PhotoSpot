<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/splash_layer"
    android:background="@drawable/backgroud_detailfoto"
    android:orientation="vertical"
    tools:context=".LayarSplash">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/splashlogo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="160dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Your Photo Spot Here"
        android:textSize="22dp"
        android:textStyle="bold"
        android:fontFamily="@font/ortisan_signature"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:id="@+id/textsplash"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

</LinearLayout>