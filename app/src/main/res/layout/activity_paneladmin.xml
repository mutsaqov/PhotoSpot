<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.findit.paneladmin"
    android:background="@mipmap/backgroundutama">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/fyoslogotext"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"/>

            <ImageView
                android:src="@drawable/adminlogo"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="30dp" />

            <Button
                android:id="@+id/btn_tambah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:padding="10dp"
                android:text="Tambah Spot Baru"
                android:shadowColor="@android:color/transparent"
                android:background="@drawable/shapelogin"
                android:drawableLeft="@mipmap/tambahspotlogo_35"
                />
            <Button
                android:id="@+id/btn_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:padding="10dp"
                android:text="Lihat Spot"
                android:shadowColor="@android:color/transparent"
                android:background="@drawable/shapelogin"
                android:drawableLeft="@mipmap/viewspotlogo_35"
                />
            <Button
                android:id="@+id/btn_signout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:padding="10dp"
                android:text="Logout"
                android:shadowColor="@android:color/transparent"
                android:background="@drawable/shapelogin"
                android:drawableLeft="@mipmap/logoutlogo_35"
                />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>